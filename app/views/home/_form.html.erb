<div class="col-md-3">
		<div style ="width: 200px; height:550px; scrollbar-base-color:#ffeaff; border:1px ; overflow-y:scroll">
						

			<p><label><b>Price</b></label></p>
					<%= form_tag(product_category_home_index_path, method: :get) do %>
						<p><%= radio_button_tag :filter, "0-10000", false, onclick: "this.form.submit();", :checked=>(params[:filter].present? && (params[:filter].to_i>=0) and (params[:filter].to_i<=10000)) ? true : false %>&lt;10000</p>
						<p><%= radio_button_tag :filter, "10001-20000", false, onclick: "this.form.submit();",  :checked=>((params[:filter].to_i>=10001) and (params[:filter].to_i<=20000)) ? true : false %>10001-20000</p>
						<p><%= radio_button_tag :filter, "20001-40000", false, onclick: "this.form.submit();",  :checked=>((params[:filter].to_i>=20001) and (params[:filter].to_i<=40000)) ? true : false %>20001-40000</p>
						<p><%= radio_button_tag :filter, "40001-80000", false, onclick: "this.form.submit();",  :checked=>((params[:filter].to_i>=40001) and (params[:filter].to_i<=80000)) ? true : false %>40001-80000</p>
						<p><%= radio_button_tag :filter, "80001-160000", false, onclick: "this.form.submit();",  :checked=>((params[:filter].to_i>=80001) and (params[:filter].to_i<=160000)) ? true : false %>80001-160000</p>
						<p><%= radio_button_tag :filter, "160001", false, onclick: "this.form.submit();",  :checked=>((params[:filter].to_i>=160001)) ? true : false %>&gt;160001</p>
					<% end %>
						<br/ ><br />


			<p><label><b>Category</b></label></p>		
			<% @categories.each do |category| %>
				<%= form_tag(product_category_home_index_path, method: :get ) do %>
					<p><%= check_box_tag "categories[]", category.id, false , onclick: "this.form.submit();", :checked=>(params[:categories].present? && (params[:categories].include?category.id.to_s)) ? true : false %><%= category.name %></p>
				<% end %>
			<% end %>
			<br/ ><br />
			
			<p><label><b>Brand</b></label></p>
			
			<% @brands.each do |brand| %>
				<%= form_tag(product_category_home_index_path, method: :get ) do %>
					<p><%= check_box_tag "brands[]", brand.id, false , onclick: "this.form.submit();", :checked=>(params[:brands].present? && (params[:brands].include? brand.id.to_s)) ? true : false %><%= brand.name %> </p>
				<% end %>
			<% end %><br/ ><br />

		</div> 
	</div>