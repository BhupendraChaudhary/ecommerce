<div class="table-responsive">
  <table class="table">
    <tr>
      <th>Product Name</th><th>Product Price</th><th>Quantity</th><th>Total Amount</th><th>E-mail</th><th>Customer Name</th>
      <th>Street</th><th>City</th><th>Country</th><th>Pin Code</th>
    </tr>
    <% @products.each do |product| %>
    <% if product.orders.present? %>
    <% product.orders.each do |order| %>
    <%  %>
      <tr>
        <td><%= order.product_name %></td><td><%= order.product_price %></td><td><%= order.product_quantity %></td>
        <td><%= order.total_amount %></td><td><%= order.email %></td><td><%= order.full_name %></td>
        <td><%= order.street %></td><td><%= order.city %></td><td><%= order.country %></td><td><%= order.zip %></td>
      </tr>
    <% end %>
    <% end %>
    <% end %>
  </table>
</div>

